<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configurazione di TLS pinning per ghostbridge-backend -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">ghostbridge-backend.example.com</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
        <pin-set expiration="2026-01-01">
            <!-- SHA-256 fingerprint del certificato di produzione -->
            <pin digest="SHA-256">AbCdEfGhIjKlMnOpQrStUvWxYz0123456789ABCDEF=</pin>
        </pin-set>
    </domain-config>
    <!-- Configurazione di TLS pinning per quantum.ghostbridge -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">quantum.ghostbridge.example.com</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
        <pin-set expiration="2026-01-01">
            <pin digest="SHA-256">ZyXwVuTsRqPoNmLkJiHgFeDcBa0987654321FEDCBA=</pin>
        </pin-set>
    </domain-config>
</network-security-config>